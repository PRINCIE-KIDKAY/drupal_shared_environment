<?php

/**
 * @file
 * Local development override configuration file.
 *
 * This file is used for Docker/local development environments.
 * Copy this file to settings.local.php and uncomment the database configuration.
 */

/**
 * Database configuration for Docker/MySQL.
 * 
 * This automatically reads configuration from environment variables
 * set in the .env file at the project root.
 * This will override the SQLite configuration in settings.php.
 */
$databases['default']['default'] = [
  'database' => getenv('DB_NAME') ?: 'drupal',
  'username' => getenv('DB_USER') ?: 'drupal',
  'password' => getenv('DB_PASSWORD') ?: 'drupal',
  'host' => getenv('DB_HOST') ?: 'db',
  'port' => getenv('DB_PORT') ?: '3306',
  'driver' => 'mysql',
  'prefix' => '',
  'collation' => 'utf8mb4_general_ci',
];

